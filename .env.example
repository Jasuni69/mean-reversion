# Polymarket API Configuration
# Get your API credentials from https://polymarket.com

# Your Ethereum private key (for signing transactions)
PRIVATE_KEY=your_private_key_here

# Your API key from Polymarket
API_KEY=your_api_key_here

# Your API secret from Polymarket
API_SECRET=your_api_secret_here

# Your API passphrase from Polymarket
API_PASSPHRASE=your_api_passphrase_here

# Chain ID (137 for Polygon mainnet)
CHAIN_ID=137

# Trading Configuration
# Minimum price spike to trigger a NO bet (as decimal, 0.20 = 20%)
MIN_SPIKE_THRESHOLD=0.20

# Maximum position size in USDC
MAX_POSITION_SIZE=100

# Minimum liquidity required to trade (in USDC)
MIN_LIQUIDITY=1000
